{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "react",

		"baseUrl": "./",
		"paths": {
			"@assets/*": ["./src/assets/*"],
			"@components/*": ["./src/components/*"],
			"@layouts/*": ["./src/layouts/*"],
			"@constants": ["./src/constants.ts"],
			"@utils": ["./src/utils.ts"],
			"@styles/*": ["./src/styles/*"]
		},

		/* 추가/보강 */
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"types": ["astro/client"]
	},
	"include": [
		".astro/types.d.ts",
		"**/*",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.astro"
	],
	"exclude": ["dist"]
}
