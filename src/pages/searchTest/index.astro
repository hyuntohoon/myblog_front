---
import SearchBar from "../../components/search-bar.astro";
const detailClient = '/src/scripts/albumDetail.client.ts';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Music Search</title>
  </head>
  <body style="font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Noto Sans; padding: 2rem; background:#fafafa;">
    <div style="max-width:960px; margin:0 auto; display:grid; gap:1.25rem;">
      <h1 style="font-size:1.25rem; font-weight:700; margin:0;">Search</h1>
      <SearchBar />

      <!-- ✅ 앨범 상세 표시 영역 (이벤트 수신 시 렌더) -->
      <div id="albumDetail"></div>
    </div>

    <script type="module" src={detailClient}></script>
  </body>
</html>