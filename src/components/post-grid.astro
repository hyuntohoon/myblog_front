---
// src/components/post-grid.astro
import type { CollectionEntry } from 'astro:content'

export interface Props {
  posts: CollectionEntry<'blog'>[]
  currentSlug?: string
  title?: string
}

const { posts, currentSlug, title = 'More posts' } = Astro.props

const visible = posts
  .filter((p) => p.data.slug !== currentSlug)
  .slice(0, 6) // 최대 6개 정도만
---

{visible.length > 0 && (
  <section class="mt-12">
    <h2 class="mb-4 text-lg font-semibold text-slate-900">
      {title}
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {visible.map((p) => (
        <article class="group cursor-pointer">
          <a href={`/blog/${p.data.slug}/`} class="block">
            {/* 커버 */}
            <div class="w-full aspect-[1/1] rounded-xl overflow-hidden bg-slate-100">
              {p.data.image ? (
                <img
                  src={p.data.image}
                  alt={p.data.title}
                  class="h-full w-full object-cover transition-transform duration-200 group-hover:scale-[1.03]"
                  loading="lazy"
                />
              ) : (
                <div class="h-full w-full flex items-center justify-center text-xs text-slate-400">
                  No Image
                </div>
              )}
            </div>

            {/* 텍스트 */}
            <div class="mt-3">
              <h3 class="text-sm font-semibold text-slate-900 line-clamp-2">
                {p.data.title}
              </h3>
              {p.data.category && (
                <p class="mt-1 text-xs text-slate-500">
                  {p.data.category}
                </p>
              )}
            </div>
          </a>
        </article>
      ))}
    </div>
  </section>
)}